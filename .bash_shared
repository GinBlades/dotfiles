if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

if [ -f ~/.bash_rails ]; then
    . ~/.bash_rails

    export PATH="$HOME/.rbenv/bin:$PATH"
    eval "$(rbenv init -)"
    export PATH="$HOME/.rbenv/plugins/ruby-build/bin:$PATH"
fi

if [ -f ~/.bash_projects ]; then
    . ~/.bash_projects
fi

export EDITOR="vim"
