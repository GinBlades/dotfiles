alias rails-s='bundle exec rails server -b 0.0.0.0'
alias rails-c='bundle exec rails c'
alias r-spec='bundle exec rspec spec'
alias brs='bin/rails server -b 0.0.0.0'
alias brc='bin/rails c'
alias brr='bin/rspec spec'

function b-rails() {
  bundle exec rails $*
}
function b-rake() {
  bundle exec rake $*
}

function b-rspec() {
  bundle exec rspec $*
}

function s-rails() {
  RAILS_ENV=staging rails $*
}
